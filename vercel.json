{
    "version": 2,
    "builds" : [
        {
            "src": "personal_finance_manager/pesonal_finance_manager/wsgi.py",
            "use": "@vercel/python",
            "config": { "maxLambdaSize": "15mb" ,
                        "runtime": "python3.11.4"
            }
        },
        {
            "src": "build.sh",
            "use": "@vercel/static-build",
            "config": { "distDir": "staticfiles" }
        }
    ],
    "routes": [
        { "src": "/static/(.*)", "dest": "/static/$1" },
        { "src": "/(.*)", "dest": "personal_finance_manager/pesonal_finance_manager/wsgi.py" }
    ]
}